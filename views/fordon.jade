extends layout

block content

  .header.div_style
    .headline
      h1 Administration
    .meny
      ul
        li
          a(href='#') Boka bil
        li
          a(href='#') Bilar till besiktning(5)
        li
          a(href='#')
            | user
            br
            | logga ut
  // ----------------- sök fordon
  h2#headline_add_remove Lägg till / Ändra fordon
  br
  h2#search_headline Sök fordon
  .search.div_style
    h2#reg_info_headline Registreringsnummer
    input#search_text(type='text')
    span.req_star *
    button#search_button Sök
  // -----------------  fordon
  form(method='post' action='/fordon/add')
    .vehicle_container
      h2#vehicle_headline Fordon
      .vehicle.div_style
        .vehicle_left
          | Märke :
          input(type='text' placeholder='Märke' name='brand')
          span.req_star *
          br
          |         Modell :
          input(type='text' placeholder='Modell' name='model')
          span.req_star *
          br
          |         Typ :
          select(name='type')
            option(value='Sedan') Sedan
            option(value='Volvo') Volvo
            option(value='saab') Saab
            option(value='fiat') Fiat
            option(value='audi') Audi
          span.req_star *
        .vehicle_right
          | Årsmodell :
          input(type='text' placeholder='Årsmodell' name='year')
          span.req_star *
          br
          |         Reg-info :
          input(type='text' placeholder='Reg-info' name='regnum' class='regnum')
          span.req_star *
          br
          |         Antal passagerare :
          input(type='text' placeholder='Antal passagerare' name='passenger')
          span.req_star *
          br
      .option.div_style
        h2#option_headline Tillval
        each funk in funklista
          label= funk.name
          input(type='checkbox' value=funk.id)
      .action_button
        | status : Bokningsbar
        span.data_service
          input(type='date' name='serviceDate')
          input(type='checkbox' name='service')
          | Service
        button.button_style Ta bort
        button.button_style Uppdatera
        button.button_style Lägg till
  h2 Besiktningsinformation
  .inspection_info
    .car
      span.reg_nr ABC 123
      span.date_info
        input(type='date')
      span
        button.button_style Spara
    .car
      span.reg_nr ABC 123
      span.date_info 30 / 4 / 2016
      span
        button.button_style Spara
  h2 Serviceinformation
  .service_info
    .car
      span.reg_nr DEF 456
      span.date_info 18 / 3 / 2016
      span
        button.button_style Spara
    .car
      span.reg_nr GHI 789
      span.date_info 14 / 7 / 2016
      span
        button.button_style Spara
  if(carErr)
    div(class='doesExist')= carExists